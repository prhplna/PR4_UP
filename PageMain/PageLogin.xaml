<Page x:Class="PR4_UP.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR4_UP.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="LightSteelBlue">
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин" Style="{StaticResource Label}"/>
            <TextBox x:Name="txbLogin" Text=" " Style="{StaticResource TextBox}"/>
            <Label Content="Введите пароль" Style="{StaticResource Label}"/>
            <PasswordBox x:Name="psbPassword" Style="{StaticResource PasswordBox}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnLogin" Content="Войти" Style="{StaticResource ButtonG}" Click="BtnLogin_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
